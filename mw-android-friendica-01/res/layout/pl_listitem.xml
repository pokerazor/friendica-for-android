<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">
    
    <ImageView android:id="@+id/profileImage" android:layout_width="50dp" android:layout_height="50dp" android:contentDescription="@string/contentDescription_profile_image" />
		
    <LinearLayout android:paddingLeft="5dp" android:orientation="vertical"  android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/userName" android:textColor="#00aa22" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:id="@+id/htmlContent" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        
    </LinearLayout>
    
    
</LinearLayout>