<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/bubble_image"
		android:layout_width="65dp"
		android:layout_height="65dp"
		android:contentDescription="@string/imageAltText"
		android:visibility="visible" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="5dp" >

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/bubble_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:layout_weight="1"
				android:maxEms="17"
				android:text="@string/titlePlaceholder"
				android:textColor="#000000" />

			<Button
				android:id="@+id/bubble_moreinfo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_weight="0"
				android:background="@drawable/btn_moreinfo"
				android:visibility="gone" />
		</LinearLayout>

		<TextView
			android:id="@+id/bubble_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxEms="17"
			android:text="@string/descriptionPlaceholder"
			android:textColor="#000000"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/bubble_subdescription"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxEms="17"
			android:text="@string/addressPlaceholder"
			android:textColor="#000000"
			android:textSize="10sp"
			android:visibility="visible" />
	</LinearLayout>

</LinearLayout>